<!---The Heading Content View-->
<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %>

<!---The Messagee Block-->
<% messages() %>

<!--Displaying the Registration HTML forms view-->
<form action="/account/register" method="post">
    <label for="account_firstname">First Name:</label>
    <input type="text" name="account_firstname" required>

    <label for="account_lastname">Last Name:</label>
    <input type="text" name="account_lastname" required>

    <label for="account_email">Email:</label>
    <input type="email" name="account_email" required>

    <label for="account_password">Password:</label>
    <input type="password" name="account_password" required minlength="12" pattern="(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*])">

    <button type="submit">Register</button>
</form>