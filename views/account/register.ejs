<!---The Heading Content View-->
<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %>

<!---The Messagee Block-->
<!---The Messagee Block-->
<% if (messages.length > 0) { %>
  <div class="alert alert-info" id="flash-message">
      <% messages.forEach(function(message) { %>
          <p><%= message %></p>
      <% }); %>
  </div>
<% } %>

<!--Displaying the Registration HTML forms view-->
<fieldset>
  <legend>Personal Info</legend>
  <form action="/account/register" method="post">
    <label for="account_firstname">First Name:</label>
    <input type="text" name="account_firstname" id="accountFirstname" required value="<%= locals.account_firstname %>">

    <label for="account_lastname">Last Name:</label>
    <input type="text" name="account_lastname" id="accountLastname" required value="<%= locals.account_lastname %>">

    <label for="account_email">Email:</label>
    <input
      type="email"
      name="account_email"
      required
      placeholder="Enter a valid email address"
      required
    />

    <div>
      <label for="accountPassword">Password:</label>
      <input
        type="password"
        name="account_password"
        id="accountPassword"
        required
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
      />
      <button type="button" id="togglePassword">Show</button>
      <br /><span id="passCharacters"
        >Passwords must be at least 12 characters and contain at least 1 number,
        1 capital letter and 1 special character</span
      >
    </div>

    <button type="submit" id="submitBtn">Register</button>
    <span<p id="registerAccountText">Already have account? <a id="registerAccount" href="/account/login">Login</a></p></span>  </form>
</fieldset>



<script src="/js/flash.js"></script>